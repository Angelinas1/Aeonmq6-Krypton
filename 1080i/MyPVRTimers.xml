<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- Aeon MQ 6 -->
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <views>50</views>
    <onunload condition="Skin.HasSetting(kioskcode)">Skin.Reset($INFO[skin.string(custom_code)])</onunload>
    <controls>
        <control type="multiimage">
            <!-- Fanart -->
            <include>WindowBG</include>
            <imagepath background="true">$VAR[value_menutheme_livetv]</imagepath>
        </control>
        <control type="group">
            <!-- Visualizacao de fundo -->
            <animation effect="fade" reversible="true" time="300">VisibleChange</animation>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>black.png</texture>
                <colordiffuse>C3FFFFFF</colordiffuse>
                <include>Animation_Fade</include>
                <visible>Player.HasMedia</visible>
            </control>
            <control type="videowindow">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <visible>Player.HasVideo</visible>
                <animation effect="slide" start="0,0" end="-3000,0" time="0">WindowClose</animation>
            </control>
            <control type="visualisation">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <visible>Player.HasAudio</visible>
                <animation effect="slide" start="0,0" end="-3000,0" time="0">WindowClose</animation>
            </control>
        </control>
        <control type="group">
            <!-- default group -->
            <include>Animation_Window</include>
            <visible>![Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo) | Window.IsActive(PVRGuideSearch) | Window.IsActive(PVRTimerSetting)]</visible>
            <control type="button" id="9900">
                <!-- to menu/kiosk condition -->
                <include>InvisibleButton</include>
                <onfocus condition="![Skin.HasSetting(kiosk) | Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)]">SetFocus(9000)</onfocus>
                <onfocus condition="Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)">SetFocus(9100)</onfocus>
            </control>
            <control type="button" id="9920">
                <!-- hidden colection/view fanart -->
                <include>InvisibleButton</include>
                <onleft>SetFocus(50)</onleft>
                <onright>SetFocus(50)</onright>
                <onup>SetFocus(50)</onup>
                <ondown>SetFocus(50)</ondown>
            </control>
            <control type="group">
                <animation effect="fade" reversible="true" time="300">VisibleChange</animation>
                <visible>Control.IsVisible(50)</visible>
                <include>EPGMenu</include>
                <control type="image">
                    <left>360</left>
                    <top>196</top>
                    <width>472</width>
                    <height>658</height>
                    <texture>grey.png</texture>
                    <colordiffuse>20FFFFFF</colordiffuse>
                </control>
                <control type="image">
                    <left>1590</left>
                    <top>196</top>
                    <width>270</width>
                    <height>658</height>
                    <texture>grey.png</texture>
                    <colordiffuse>20FFFFFF</colordiffuse>
                </control>
                <control type="panel" id="50">
                    <left>0</left>
                    <top>195</top>
                    <width>1920</width>
                    <height>660</height>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <onleft>35</onleft>
                    <onright>73</onright>
                    <pagecontrol>73</pagecontrol>
                    <scrolltime>350</scrolltime>
                    <itemlayout height="60" width="1920">
                        <control type="label">
                            <include>SettingsLabel</include>
                            <label>$INFO[ListItem.ChannelName]</label>
                        </control>
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>360</width>
                            <height>4</height>
                            <texture>divider.png</texture>
                            <colordiffuse>90FFFFFF</colordiffuse>
                        </control>
                        <control type="image">
                            <left>360</left>
                            <top>1</top>
                            <width>1560</width>
                            <height>57</height>
                            <aspectratio>stretch</aspectratio>
                            <colordiffuse>50FFFAF0</colordiffuse>
                            <texture>settings_button_focus.png</texture>
                        </control>
                        <control type="label">
                            <left>375</left>
                            <top>0</top>
                            <width>435</width>
                            <height>60</height>
                            <align>center</align>
                            <aligny>center</aligny>
                            <font>Font_20</font>
                            <include>listcolor</include>
                            <info>ListItem.Date</info>
                        </control>
                        <control type="label">
                            <left>885</left>
                            <top>1</top>
                            <width>885</width>
                            <height>57</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>Font_18A</font>
                            <include>listcolor</include>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="image">
                            <left>1620</left>
                            <top>15</top>
                            <width>45</width>
                            <height>30</height>
                            <texture>pvr_isrecording.png</texture>
                            <visible>ListItem.IsRecording</visible>
                        </control>
                        <control type="label">
                            <left>1680</left>
                            <top>1</top>
                            <width>165</width>
                            <height>57</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>Font_18A</font>
                            <include>listcolorfocus</include>
                            <info>ListItem.Comment</info>
                        </control>
                    </itemlayout>
                    <focusedlayout height="60" width="1920">
                        <control type="image">
                            <left>0</left>
                            <top>0</top>
                            <width>357</width>
                            <height>60</height>
                            <texture>settings_button.png</texture>
                            <animation effect="fade" start="100" end="50" time="50" condition="!Control.Hasfocus(50)">conditional</animation>
                        </control>
                        <control type="image">
                            <left>360</left>
                            <top>1</top>
                            <width>1560</width>
                            <height>57</height>
                            <aspectratio>stretch</aspectratio>
                            <colordiffuse>FFFFFAF0</colordiffuse>
                            <texture>settings_button_focus.png</texture>
                        </control>
                        <control type="label">
                            <include>SettingsLabelFocus</include>
                            <label>$INFO[ListItem.ChannelName]</label>
                        </control>
                        <control type="label">
                            <left>375</left>
                            <top>0</top>
                            <width>435</width>
                            <height>60</height>
                            <align>center</align>
                            <aligny>center</aligny>
                            <font>Font_20</font>
                            <textcolor>$VAR[value_headercolor]</textcolor>
                            <info>ListItem.Date</info>
                        </control>
                        <control type="label">
                            <left>885</left>
                            <top>1</top>
                            <width>885</width>
                            <height>57</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>Font_18A</font>
                            <include>listcolorfocus</include>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="image">
                            <left>1620</left>
                            <top>15</top>
                            <width>45</width>
                            <height>30</height>
                            <texture>pvr_isrecording.png</texture>
                            <visible>ListItem.IsRecording</visible>
                        </control>
                        <control type="label">
                            <left>1680</left>
                            <top>1</top>
                            <width>165</width>
                            <height>57</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <font>Font_18A</font>
                            <include>listcolorfocus</include>
                            <info>ListItem.Comment</info>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="73">
                    <include>ScrollBar_Vertical</include>
                    <left>1868</left>
                    <top>202</top>
                    <height>645</height>
                    <onleft>11</onleft>
                    <onright>35</onright>
                    <ondown>73</ondown>
                    <onup>73</onup>
                    <visible>Control.IsVisible(50)</visible>
                </control>
                <include>PVRCommonInfo</include>
            </control>
            <!-- Furniture -->
            <include>TouchScreen</include>
            <include condition="Skin.HasSetting(pvrdate)">TopDate</include>
            <include>TopMenu_PVR</include>
            <include>BGBlack</include>
        </control>
    </controls>
</window>
