<?xml version="1.0" encoding="UTF-8"?>
<window id="2">
    <!-- Aeon MQ 6 -->
    <defaultcontrol>51</defaultcontrol>
    <onunload condition="Skin.HasSetting(kioskcode)">Skin.Reset($INFO[skin.string(custom_code)])</onunload>
    <views>51,56,59,79</views>
    <controls>
        <control type="multiimage">
            <!-- Fanart -->
            <include>WindowBG</include>
            <include>Animation_Fade</include>
            <imagepath background="true">$VAR[value_menutheme_pictures]</imagepath>
            <visible>IsEmpty(Control.GetLabel(555))</visible>
        </control>
        <control type="image" id="555">
            <!-- Fanart -->
            <include>WindowBG</include>
            <aspectratio>keep</aspectratio>
            <texture background="true">$INFO[ListItem.filenameandpath]</texture>
        </control>
        <control type="group">
            <!-- default group -->
            <include>Animation_Window</include>
            <control type="group">
                <top>45</top>
                <control type="image" id="105">
                    <include>InvisibleButton</include>
                    <visible>Control.HasFocus(79) + ![Container(79).OnNext | Container(79).OnPrevious]</visible>
                    <animation effect="fade" start="0" end="100" time="150" delay="5000">Visible</animation>
                </control>
                <control type="button" id="9900">
                    <!-- to menu/kiosk condition -->
                    <include>InvisibleButton</include>
                    <onfocus condition="![Skin.HasSetting(kiosk) | Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)]">SetFocus(9300)</onfocus>
                    <onfocus condition="Skin.HasSetting(kiosksmart) + !SubString(skin.string(codestep),step3)">SetFocus(9100)</onfocus>
                    <onfocus condition="Skin.HasSetting(kiosk) + IsEmpty(ListItem.Trailer)">SetFocus(50)</onfocus>
                    <onfocus condition="Skin.HasSetting(kiosk) + !IsEmpty(ListItem.Trailer)">SetFocus(90000)</onfocus>
                </control>
                <control type="button" id="9910">
                    <!-- panel focus -->
                    <include>InvisibleButton</include>
                    <onleft>SetFocus(50)</onleft>
                    <onright>SetFocus(50)</onright>
                    <onup>SetFocus(9900)</onup>
                    <ondown>SetFocus(50)</ondown>
                </control>
                <control type="button" id="9920">
                    <!-- hidden colection/view fanart -->
                    <include>InvisibleButton</include>
                    <onleft>SetFocus(50)</onleft>
                    <onright>SetFocus(50)</onright>
                    <onup>SetFocus(50)</onup>
                    <ondown>SetFocus(50)</ondown>
                </control>
                <control type="image">
                    <!-- Barra das etiquetas -->
                    <left>0</left>
                    <top>915</top>
                    <width>1920</width>
                    <height>120</height>
                    <colordiffuse>$INFO[Skin.String(colorfloor)]</colordiffuse>
                    <texture>shadow_mask.png</texture>
                    <visible>!StringCompare(Container.Viewmode,PHOTOSHOW)</visible>
                </control>
                <control type="image">
                    <left>0</left>
                    <top>975</top>
                    <height>63</height>
                    <width>1920</width>
                    <texture>gradient_small.png</texture>
                </control>
            </control>
            <control type="group">
                <!-- Titulo e subtitulo -->
                <top>-45</top>
                <animation effect="slide" time="400" start="0,-375" end="0,0" easing="inout" tween="cubic">WindowOpen</animation>
                <animation effect="slide" time="400" start="0,-375" end="0,0" easing="inout" tween="cubic">Visible</animation>
                <animation effect="slide" time="400" start="0,0" end="0,-375" easing="inout" tween="cubic">WindowClose</animation>
                <animation effect="slide" time="400" start="0,0" end="0,-375" easing="inout" tween="cubic">Hidden</animation>
                <visible>[StringCompare(Container.Viewmode,WALL) | StringCompare(Container.Viewmode,PHOTOSHOW)] + ![ControlGroup(9000).HasFocus | Control.HasFocus(9920) | Control.IsVisible(9922) | Control.HasFocus(9940) | Window.IsActive(movieinformation) | Window.IsVisible(6621) | Window.IsVisible(6625) | Control.IsVisible(105)]</visible>
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>1920</width>
                    <height>450</height>
                    <texture flipy="true">shadow_mask.png</texture>
                    <colordiffuse>F9000000</colordiffuse>
                    <animation effect="fade" end="75" condition="true">Conditional</animation>
                </control>
                <control type="label">
                    <!-- Title -->
                    <left>45</left>
                    <top>87</top>
                    <width>1125</width>
                    <height>60</height>
                    <font>Font_title</font>
                    <label>$VAR[value_videotitle]</label>
                    <textcolor>FFFFFAF0</textcolor>
                    <scroll>true</scroll>
                    <scrollout>false</scrollout>
                    <shadowcolor>grey</shadowcolor>
                    <visible>![Skin.HasSetting(clearlogotitle) + !IsEmpty(ListItem.Art(clearlogo))]</visible>
                </control>
                <control type="image">
                    <!-- clearlogo -->
                    <left>45</left>
                    <top>87</top>
                    <width>450</width>
                    <height>68</height>
                    <texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
                    <aspectratio align="left" aligny="bottom">keep</aspectratio>
                    <fadetime>FanartCrossFadeTime</fadetime>
                    <visible>Skin.HasSetting(clearlogotitle) + !IsEmpty(ListItem.Art(clearlogo))</visible>
                </control>
                <control type="label">
                    <left>45</left>
                    <top>150</top>
                    <width>1125</width>
                    <height>38</height>
                    <font>Font_subtitle</font>
                    <label>$INFO[ListItem.Tagline]</label>
                    <textcolor>90FFFFFF</textcolor>
                    <scroll>true</scroll>
                    <scrollout>false</scrollout>
                    <shadowcolor>grey</shadowcolor>
                    <visible>!Skin.HasSetting(nomoviestagline)</visible>
                </control>
                <control type="label">
                    <left>45</left>
                    <top>195</top>
                    <width>1125</width>
                    <height>38</height>
                    <font>Font_plot</font>
                    <label>$VAR[value_videotvshowtag]</label>
                    <textcolor>90FFFFFF</textcolor>
                    <scroll>true</scroll>
                    <scrollout>false</scrollout>
                    <shadowcolor>grey</shadowcolor>
                    <animation effect="slide" start="0,0" end="0,-45" condition="IsEmpty(ListItem.Tagline) | Skin.HasSetting(nomoviestagline)">Conditional</animation>
                    <visible>[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + ![StringCompare(ListItem.Label,..) | Skin.HasSetting(notvshowstagline)]</visible>
                </control>
            </control>
            <control type="group">
                <top>45</top>
                <!-- ViewTypes -->
                <include>ViewRightList</include>
                <!-- 51 -->
                <include>ViewWallPics</include>
                <!-- 56 -->
                <include>ViewWide</include>
                <!-- 59 -->
                <include>ViewPhotoShow</include>
                <!-- 79 -->
            </control>
            <!-- Furniture -->
            <include>TouchScreen</include>
            <include>ScrollLabel</include>
            <include>TopMenu_Pics</include>
            <include>BGBlack</include>
        </control>
    </controls>
</window>
