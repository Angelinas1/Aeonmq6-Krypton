    <onunload condition="Window.IsActive(Home) + ![StringCompare(skin.string(codestep),step1) | StringCompare(skin.string(codestep),step2) | StringCompare(skin.string(codestep),step3)]">AlarmClock(firstfocus,SetFocus(9000),0:01,true)</onunload>
