                <aligny>top</aligny>
                <texture>logo_kioskcode_open.png</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="slide" start="0,0" end="0,-45" time="400" tween="circle" easing="in" condition="StringCompare(skin.string(codestep),step3)">Conditional</animation>
            </control>
            <control type="label">
