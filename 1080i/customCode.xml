            <onfocus condition="StringCompare(skin.string(codestep),step2)">Skin.SetString(codestep,step3)]</onfocus>
            <onfocus condition="StringCompare(skin.string(codestep),step2)">AlarmClock(kioskcode,Dialog.Close(6629),0:02,true)</onfocus>
        </control>
        <control type="button" id="9930">
            <!-- code -->
            <include>InvisibleButton</include>
            <onfocus>SetFocus(9930)</onfocus>
            <onleft condition="![StringCompare(skin.string(codestep),step1) | StringCompare(skin.string(codestep),step2) | StringCompare(skin.string(codestep),step3)]">SetFocus(9929)</onleft>
            <onleft condition="StringCompare(skin.string(codestep),step1) | StringCompare(skin.string(codestep),step2) | StringCompare(skin.string(codestep),step3)">Dialog.Close(6629)</onleft>
            <onleft condition="StringCompare(skin.string(codestep),step1) | StringCompare(skin.string(codestep),step2) | StringCompare(skin.string(codestep),step3)">Skin.Reset(codestep)</onleft>
            <onright condition="StringCompare(skin.string(codestep),step1)">SetFocus(9929)</onright>
            <onright condition="!StringCompare(skin.string(codestep),step1)">Dialog.Close(6629)</onright>
            <onright condition="!StringCompare(skin.string(codestep),step1)">Skin.Reset(codestep)</onright>
            <onup condition="StringCompare(skin.string(codestep),step2)">SetFocus(9929)</onup>
            <onup condition="!StringCompare(skin.string(codestep),step2)">Dialog.Close(6629)</onup>
            <onup condition="!StringCompare(skin.string(codestep),step2)">Skin.Reset((codestep)</onup>
            <ondown>Dialog.Close(6629)</ondown>
            <ondown>Skin.Reset(codestep)</ondown>
            <visible>true</visible>
        </control>
        <control type="group">
            <include>Animation_DialogPopup</include>
            <control type="image">
                <left>525</left>
