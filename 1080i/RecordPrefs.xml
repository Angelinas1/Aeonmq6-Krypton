<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- Aeon MQ 6 -->
    <defaultcontrol always="true">10</defaultcontrol>
    <coordinates>
        <system>1</system>
    </coordinates>
    <controls>
        <control type="image">
            <include>WindowBG</include>
            <include>Animation_Fade</include>
            <texture fallback="special://skin/backgrounds/livetv.jpg" background="true">$INFO[skin.string(livetv.bg)]</texture>
        </control>
        <control type="group">
            <!-- Visualizacao de fundo -->
            <animation effect="fade" reversible="true" time="300">VisibleChange</animation>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>black.png</texture>
                <colordiffuse>C3FFFFFF</colordiffuse>
                <include>Animation_Fade</include>
                <visible>Player.HasMedia</visible>
            </control>
            <control type="videowindow">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <visible>Player.HasVideo</visible>
                <animation effect="slide" start="0,0" end="-3000,0" time="0">WindowClose</animation>
            </control>
            <control type="visualisation">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <visible>Player.HasAudio</visible>
                <animation effect="slide" start="0,0" end="-3000,0" time="0">WindowClose</animation>
            </control>
        </control>
        <control type="group">
            <include>Animation_DialogPopup</include>
            <control type="image">
                <left>165</left>
                <top>0</top>
                <width>45</width>
                <height>1080</height>
                <texture flipx="true">shadow.png</texture>
                <colordiffuse>C3FFFFFF</colordiffuse>
            </control>
            <control type="image">
                <left>1710</left>
                <top>0</top>
                <width>45</width>
                <height>1080</height>
                <texture>shadow.png</texture>
                <colordiffuse>C3FFFFFF</colordiffuse>
            </control>
            <control type="image">
                <left>210</left>
                <top>0</top>
                <width>1500</width>
                <height>1080</height>
                <texture>darkgrey.png</texture>
                <colordiffuse>$VAR[value_texturecolor]</colordiffuse>
                <include>Animation_DefaultGlass</include>
            </control>
            <control type="image">
                <left>210</left>
                <top>0</top>
                <width>1500</width>
                <height>120</height>
                <texture>black.png</texture>
                <colordiffuse>90FFFFFF</colordiffuse>
            </control>
            <control type="label">
                <!-- Heading label -->
                <left>322</left>
                <top>34</top>
                <width>1278</width>
                <height>45</height>
                <align>center</align>
                <aligny>center</aligny>
                <label>$ADDON[pvr.wmc 30100]</label>
                <font>Font_32</font>
                <textcolor>FFFFFAF0</textcolor>
                <include>Animation_Fade</include>
            </control>
            <control type="label" id="20">
                <!-- Nome do programa -->
                <left>322</left>
                <top>135</top>
                <width>1278</width>
                <height>45</height>
                <align>center</align>
                <aligny>center</aligny>
                <label>-</label>
                <font>Font_30</font>
                <textcolor>$VAR[value_headercolor]</textcolor>
                <scroll>true</scroll>
            </control>
            <control type="grouplist">
                <left>210</left>
                <top>225</top>
                <width>1500</width>
                <height>900</height>
                <itemgap>0</itemgap>
                <onleft>1</onleft>
                <onright>1</onright>
                <onup>1</onup>
                <ondown>1</ondown>
                <control type="radiobutton" id="10">
                    <!-- Gravacao do episodio -->
                    <label>$ADDON[pvr.wmc 30101]</label>
                    <radioposx>1341</radioposx>
                </control>
                <control type="radiobutton" id="11">
                    <!-- Gravacao da serie -->
                    <label>$ADDON[pvr.wmc 30102]</label>
                    <radioposx>1341</radioposx>
                </control>
                <control type="spincontrolex" id="12">
                    <!-- Tipo de serie -->
                    <label>$ADDON[pvr.wmc 30103]</label>
                    <spinposx>26</spinposx>
                </control>
                <control type="spincontrolex" id="13">
                    <!-- Escolher o canal -->
                    <label>$ADDON[pvr.wmc 30107]</label>
                    <spinposx>26</spinposx>
                </control>
                <control type="spincontrolex" id="14">
                    <!-- Escolher o horario -->
                    <label>$ADDON[pvr.wmc 30110]</label>
                    <spinposx>26</spinposx>
                </control>
            </control>
            <control type="image">
                <left>210</left>
                <top>900</top>
                <height>60</height>
                <width>1500</width>
                <texture>black.png</texture>
                <colordiffuse>90FFFFFF</colordiffuse>
            </control>
            <control type="grouplist" id="9000">
                <left>210</left>
                <top>900</top>
                <onup>10</onup>
                <ondown>10</ondown>
                <orientation>horizontal</orientation>
                <itemgap>0</itemgap>
                <control type="button" id="1">
                    <!-- OK -->
                    <width>750</width>
                    <include>SettingsBottomButton</include>
                    <label>186</label>
                </control>
                <control type="button" id="2">
                    <!-- Cancel -->
                    <width>750</width>
                    <include>SettingsBottomButton</include>
                    <label>222</label>
                </control>
            </control>
        </control>
    </controls>
</window>
