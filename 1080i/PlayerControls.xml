<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="114">
    <!-- Aeon MQ 6 -->
    <defaultcontrol always="true">100</defaultcontrol>
    <visible>Player.HasMedia + Window.IsActive(PlayerControls) + ![Window.IsActive(FullscreenVideo) | Window.IsActive(Visualisation)]</visible>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black.png</texture>
            <colordiffuse>C3FFFFFF</colordiffuse>
            <include>Animation_Fade</include>
        </control>
        <control type="group">
            <include>Animation_DialogPopup</include>
            <animation effect="slide" start="0,0" end="45,0" condition="VideoPlayer.Content(episodes)">Conditional</animation>
            <control type="list" id="100">
                <left>795</left>
                <top>638</top>
                <height>300</height>
                <width>1485</width>
                <ondown>300</ondown>
                <onup>300</onup>
                <onleft>600</onleft>
                <onright>600</onright>
                <viewtype>list</viewtype>
                <orientation>horizontal</orientation>
                <scrolltime>200</scrolltime>
                
                <focusposition>2</focusposition>
                <itemlayout width="76" height="45">
                    <control type="image">
                        <top>33</top>
                        <width>69</width>
                        <height>69</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <colordiffuse>50FFFAF0</colordiffuse>
                    </control>
                </itemlayout>
                <focusedlayout width="76" height="45">
                    <control type="image">
                        <top>33</top>
                        <width>69</width>
                        <height>69</height>
                        <texture>$INFO[ListItem.Icon]</texture>
                        <colordiffuse>FFFFFAF0</colordiffuse>
                    </control>
                </focusedlayout>
                <content>
                    <item id="1">
                        <!-- skipbwd -->
                        <label>-</label>
                        <icon>osd_menu_skipbwd.png</icon>
                        <onclick>PlayerControl(Previous)</onclick>
                    </item>
                    <item id="2">
                        <!-- rew -->
                        <label>-</label>
                        <icon>osd_menu_rew.png</icon>
                        <onclick>PlayerControl(Rewind)</onclick>
                    </item>
                    <item id="3">
                        <!-- pause -->
                        <label>-</label>
                        <icon>osd_menu_pause.png</icon>
                        <onclick>PlayerControl(Play)</onclick>
                        <visible>!Player.Paused</visible>
                    </item>
                    <item id="4">
                        <!-- play -->
                        <label>-</label>
                        <icon>osd_menu_play.png</icon>
                        <onclick>PlayerControl(Play)</onclick>
                        <visible>Player.Paused</visible>
                    </item>
                    <item id="5">
                        <!-- stop -->
                        <label>-</label>
                        <icon>osd_menu_stop.png</icon>
                        <onclick>PlayerControl(Stop)</onclick>
                    </item>
                    <item id="6">
                        <!-- ff -->
                        <label>-</label>
                        <icon>osd_menu_ff.png</icon>
                        <onclick>PlayerControl(Forward)</onclick>
                    </item>
                    <item id="7">
                        <!-- skipfwd -->
                        <label>-</label>
                        <icon>osd_menu_skipfwd.png</icon>
                        <onclick>PlayerControl(Next)</onclick>
                    </item>
                    <item id="8">
                        <!-- rec -->
                        <label>-</label>
                        <icon>osd_menu_rec.png</icon>
                        <onclick>PlayerControl(record)</onclick>
                    </item>
                    <item id="9">
                        <!-- repeat -->
                        <label>-</label>
                        <icon>$VAR[value_button_repeat]</icon>
                        <onclick>PlayerControl(Repeat)</onclick>
                    </item>
                    <item id="10">
                        <!-- random -->
                        <label>-</label>
                        <icon>$VAR[value_button_random]</icon>
                        <onclick>PlayerControl(Random)</onclick>
                    </item>
                </content>
            </control>
            <control type="group">
                <control type="image">
                    <!-- Reflexo -->
                    <left>0</left>
                    <top>752</top>
                    <width>750</width>
                    <height>550</height>
                    <fadetime>FanartCrossFadeTime</fadetime>
                    <aspectratio align="right" aligny="top">keep</aspectratio>
                    <texture flipy="true" fallback="special://skin/backgrounds/default.jpg" diffuse="thumb_reflect.png" background="true">$VAR[value_playerposter]</texture>
                    <bordertexture flipy="true" diffuse="thumb_reflect.png" border="-2">black.png</bordertexture>
                </control>
                <control type="image">
                    <!-- Miniatura -->
                    <left>0</left>
                    <top>195</top>
                    <width>750</width>
                    <height>550</height>
                    <fadetime>FanartCrossFadeTime</fadetime>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <texture fallback="special://skin/backgrounds/default.jpg" background="true">$VAR[value_playerposter]</texture>
                    <bordertexture border="-2">black.png</bordertexture>
                </control>
            </control>
            <control type="label">
                <!-- Titulo -->
                <left>795</left>
                <top>195</top>
                <height>45</height>
                <width>825</width>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_30</font>
                <label>$VAR[value_playertitle]</label>
                <textcolor>$VAR[value_headercolor]</textcolor>
                <scroll>true</scroll>
            </control>
            <control type="label">
                <!-- Subtitulo -->
                <left>795</left>
                <top>240</top>
                <width>825</width>
                <height>45</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_20A</font>
                <textcolor>FFFFFAF0</textcolor>
                <label>$VAR[value_playersubtitle]</label>
                <scroll>true</scroll>
            </control>
            <control type="fadelabel">
                <left>795</left>
                <top>300</top>
                <width>825</width>
                <height>45</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_18A</font>
                <textcolor>FFFFFAF0</textcolor>
                <label>$VAR[value_playergenre]</label>
                <scroll>true</scroll>
            </control>
            <control type="label">
                <left>795</left>
                <top>330</top>
                <width>825</width>
                <height>45</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Font_18A</font>
                <textcolor>FFFFFAF0</textcolor>
                <label>$VAR[value_playerduration]</label>
            </control>
            <control type="progress">
                <left>795</left>
                <top>375</top>
                <width>825</width>
                <height>8</height>
                <info>Player.Progress</info>
            </control>
            <control type="textbox">
                <!-- Plot -->
                <left>795</left>
                <top>390</top>
                <width>825</width>
                <height>255</height>
                <align>justify</align>
                <font>Font_18A</font>
                <textcolor>FFFFFAF0</textcolor>
                <label>$VAR[value_playerplot]</label>
                <autoscroll delay="20000" time="3000" repeat="20000">!Skin.HasSetting(noallowscroll)</autoscroll>
            </control>
        </control>
    </controls>
</window>
